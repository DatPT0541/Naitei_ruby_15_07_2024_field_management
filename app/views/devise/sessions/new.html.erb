<% provide :title, t(".title") %>
<div class="container mt-4">
  <h1 class="mb-4"><%= t ".title" %></h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, t(".email"), class: "control-label" %>
          <div class="col-md-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, t(".password"), class: "control-label" %>
          <div class="col-md-12">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check">
            <div class="col-md-12">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, t(".remember_me"), class: "form-check-label" %>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <div class="col-md-12">
            <%= f.submit t(".submit"), class: "custom-btn w-100" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
