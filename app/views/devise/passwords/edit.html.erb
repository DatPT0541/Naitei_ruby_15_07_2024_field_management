<% provide :title, t(".title") %>
<div class="container mt-4">
  <h1 class="mb-4"><%= t ".title" %></h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
        <%= render "shared/error_messages", error_object: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, t(".password"), class: "control-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t ".password_min_length" %>)</em><br />
          <% end %>
          <div class="col-md-12">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, t(".password_confirmation"), class: "control-label" %>
          <div class="col-md-12">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <%= f.submit t(".submit"), class: "custom-btn w-100" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
