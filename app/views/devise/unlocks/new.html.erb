<% provide :title, t("devise.unlocks.new.title") %>
<h2><%= t "devise.unlocks.new.title" %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "shared/error_messages", error_object: resource %>

  <div class="field">
    <%= f.label :email, t("devise.unlocks.new.email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.unlocks.new.submit") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
