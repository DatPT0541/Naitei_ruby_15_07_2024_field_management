<% provide :title, t("devise.unlocks.new.title") %>
<div class="container mt-4">
  <h2 class="mb-4"><%= t "devise.unlocks.new.title" %></h2>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
        <%= render "shared/error_messages", error_object: resource %>

        <div class="form-group mb-3">
          <%= f.label :email, t("devise.unlocks.new.email"), class: "control-label" %><br />
          <div class="col-md-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group mb-3">
          <div class="col-md-12">
            <%= f.submit t("devise.unlocks.new.submit"), class: "custom-btn w-100" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
