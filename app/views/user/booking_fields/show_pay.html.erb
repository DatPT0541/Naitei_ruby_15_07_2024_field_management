<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mt-5"><%= t ".payment" %></h1>
        <form action="/payments" method="post" class="mt-4">
          <div class="mb-3">
            <label for="name" class="form-label"><%= t ".card_name" %></label>
            <input type="text" id="name" name="name" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="card_number" class="form-label"><%= t ".card_number" %></label>
            <input type="text" id="card_number" name="card_number" class="form-control" required maxlength="16" pattern="[0-9]{16}">
          </div>
          <div class="d-grid">
            <%= link_to t(".confirm_payment"), demo_payment_user_booking_field_path(@booking_field) , class: "btn btn-success" %>
            <%= link_to t(".cancelled"), "#" , class: "btn btn-success" %>
          </div>
        </form>
      </div>
    </div>
</div>
