<% provide :title, t("admin.vouchers.new_voucher_title") %>
<h1><%= t "admin.vouchers.new_voucher_title" %></h1>

<%= form_with model: @voucher, url: admin_vouchers_path, local: true do |f| %>

  <div class="form-group">
    <%= f.label :name, t("admin.vouchers.name") %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :value, t("admin.vouchers.value") %>
    <%= f.number_field :value, step: 0.01, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity, t("admin.vouchers.quantity") %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :expired_date, t("admin.vouchers.expired_date") %>
    <%= f.date_field :expired_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status, t("admin.vouchers.status") %>
    <%= f.select :status, Voucher.statuses.keys.map { |status| [t("admin.vouchers.statuses.#{status}"), status] }, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit t("admin.vouchers.create_voucher"), class: "btn btn-success" %>
  </div>
<% end %>
